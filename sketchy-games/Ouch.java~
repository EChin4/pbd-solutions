import java.util.Scanner;

public class TheJomieGame {
    public static void main(String[] args) {
        // Note:
        /* System.out.println("\\"); need to type in \\ to output just \ 
        System.out.println("/");
        System.out.println("\\/"); */
        
        Scanner input = new Scanner(System.in);
        System.out.println("THE JOMIE GAME!");
        System.out.println();
        System.out.print("Are you ready to start? ");
        String readyStart = input.next();
        
        System.out.println();
        System.out.println(" --------------");
        System.out.println("|   _      _   |");
        System.out.println("|  |0|    |0|  |");
        System.out.println("|   -  &   -   |");
        System.out.println("|     \\__/     |");
        System.out.println("|              |");
        System.out.println(" --------------");
        System.out.println();
        
        System.out.println("This is Jomie. Would you like to...");
        System.out.println("    1. feed");
        System.out.println("    2. compliment");
        System.out.println("    3. befriend");
        System.out.println("    4. punch");
        System.out.println("    5. starve (Jomie)");
        System.out.println("    6. all of the above");
        System.out.println();
        System.out.print("Type in the #! ");
        int actionNum = input.nextInt();
        
        if (actionNum == 1) {
            System.out.println();
            System.out.println(" --------------");
            System.out.println("|  /\\      /\\  |  *crunch*");
            System.out.println("| |yum|  |yum| |    *CRUNCH*");
            System.out.println("|   -  &   -   |");
            System.out.println("|   \\______/   |");
            System.out.println("|    \\____/    |");
            System.out.println(" --------------");
            System.out.println();
        } else if (actionNum == 2) {
            System.out.println();
            System.out.println(" --------------");
            System.out.println("|              |   <3");
            System.out.println("|   =      =   |");
            System.out.println("|   -  &   -   |");
            System.out.println("|      \\/      |");
            System.out.println("|              |");
            System.out.println(" --------------");
            System.out.println();
        } else if (actionNum == 3) {
            System.out.println();
            System.out.println(" --------------  !");
            System.out.println("|   ~     ~    |");
            System.out.println("|  |* |   |* | |  id rather");
            System.out.println("|   -  &   -   |    not tho");
            System.out.println("|     /---\\    |"); 
            System.out.println("|              |");
            System.out.println(" --------------");
            System.out.println();
        } else if (actionNum == 4) {
            System.out.println();
            System.out.println(" --------------");
            System.out.println("|   _      _   | no effect");
            System.out.println("|  |0|    |0|  |");
            System.out.println("|   -  &   -   |");
            System.out.println("|     \\__/     |  im friggin strong");
            System.out.println("|              |");
            System.out.println(" --------------");
            System.out.println();
        } else if (actionNum == 5) {
            System.out.println();
            System.out.println(" ---  ok");
            System.out.println("|o o|");
            System.out.println(" ---");
            System.out.println();
        } else if (actionNum == 6) {
            System.out.println();
            System.out.println(" --------------");
            System.out.println("|   _      _   |");
            System.out.println("|  |?|    |?|  |");
            System.out.println("|   -  &   -   |");
            System.out.println("|     \\__/     |");
            System.out.println("|              |");
