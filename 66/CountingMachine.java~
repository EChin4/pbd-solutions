import java.util.Scanner;

public class CountingMachine {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.println("yo pham give me an integer. im about to show u my countin abilities ;?)");
        int entry = input.nextInt();
        int x = 0;
        
        // good example for why while loops are more suitable than for loops for situations where the amount of times the loop runs is not known beforehand
        // liek idk how many times this fool is going to keep inputting 0
        while (entry == 0) {
            System.out.println("\nyo man. no need to be lame");
            System.out.println("u think i cant handle big numbers? TrY mE");
            entry = input.nextInt();
        }
        
        System.out.println();
        
        if (entry > 0) {
            for (x = 0; x <= entry; x++) {
                System.out.println(x);
            }
        } else if (entry < 0) {
            for (x = 0; x >= entry; x--) {
                System.out.println(x);
            }
        }
        
        System.out.println("\nsuck it");
    }
}

// float holds a smaller #. double larger
